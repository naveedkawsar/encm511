#ifndef MYCOFFEEPOTFUNCTIONS_FORCPP_H_
#define MYCOFFEEPOTFUNCTIONS_FORCPP_H_

// GPIO CONTROL (Bits 4 to 0)
#define INITandSTAYPOWERED	(1 << 0)	//0x1
#define LEDPOWER			(1 << 1)	//0x2
#define WATERPOWER			(1 << 2) 	//0x4
#define HEATERPOWER			(1 << 3)	//0x8
#define DEVICE_READY_RO		(1 << 4)	//0x10

// LED CONTROL (Bits 15 to 12) -- W1S
#define LED_CONTROL_OFFSET	12
#define LED1 				(1 << (LED_CONTROL_OFFSET + 0))	//0x1 - LED1 -- BIT 12
#define LED2				(1 << (LED_CONTROL_OFFSET + 1))	//0x2 - LED2 -- BIT 13
#define LED3				(1 << (LED_CONTROL_OFFSET + 2)) //0x3 - LED3 -- BIT 14
#define LED4				(1 << (LED_CONTROL_OFFSET + 3)) //0x4 - LED4 -- BIT 15

#endif /* MYCOFFEEPOTFUNCTIONS_FORCPP_H_ */
